// vcpkg.json (正确且完整的版本)
{
  "name": "my-project-name",
  "version": "1.0.0",
  "dependencies": [
    {
      "name": "opencv4",
      "version>=": "4.12.0",
      "default-features": false, // <--- 这是最关键的一行！它会关闭所有默认模块。
      "features": [
        "core",
        "imgproc",
        "calib3d",
        "world"
      ]
    }
  ]
}
